
package Test;
import datos.PresentacionJDBC;
import domain.Presentacion;
import java.util.List;
import java.util.Scanner;

public class PresentacionCRUD{
    
     public static void InsertData(){
        Line();
        String nombre;
        PresentacionJDBC presentacionJDBC = new PresentacionJDBC();
        System.out.println(">>> INSERTAR UN DATO <<<");
        Presentacion InsertPresentacion = new Presentacion();
        Scanner leer = new Scanner(System.in);
        System.out.println("Nombre:>");
        InsertPresentacion.setPresentacion(nombre = leer.nextLine());
        presentacionJDBC.insert(InsertPresentacion);
        Line();
    }
    
      public static void ExtraerData(){
     
        PresentacionJDBC categoriaJDBC = new PresentacionJDBC();
        
        List<Presentacion> categorias = categoriaJDBC.select();
        Line();
        System.out.println("\t\t\t\t\tBASE DE DATOS\n");
        for(Presentacion categoria:categorias){
            System.out.println(categoria);
        }
        Line();
    }
      
    public static void DeleteData(){
        Line();
        int id = 0, res=0;
        Scanner leer = new Scanner(System.in);
        PresentacionJDBC PresentacionJDBC = new PresentacionJDBC();
        Presentacion DeletePresentacion = new Presentacion();
        System.out.println("\tBORRAR DATOS");
        id = EvalueData();
        if(id == 0){
            System.out.println(">>> Salio de la opcion!");
        }
        else{
            do{
                System.out.println("Realmente desea eliminar los datos?:>");
                System.out.println("1-SI");
                System.out.println("2-No");
                res = leer.nextInt();
                if(res<1 || res>2){
                    System.out.println("Opcion no valida!...");
                }
            } while (res<1 || res>2);
            if(res==1){
                DeletePresentacion.setIdPresentacion(id);
                PresentacionJDBC.delete(DeletePresentacion);
            }
            else{
                System.out.println(">>> Operacion cancelada!");
            }
        }
        Line();
    }
    
    public static void UpdateData(){
        Line();
        int id = 0;
        String nombre;
        System.out.println("\t\tModificar datos");
        PresentacionJDBC categoriaJDBC = new PresentacionJDBC();
        Presentacion UpdatePresentacion = new Presentacion();
        //System.out.println(">>> MODIFICANDO DATOS <<<");
        Scanner leer = new Scanner(System.in);
        id = EvalueData();
        if(id == 0){
            System.out.println(">>> Salio de la opcion!");
        }
        else{
            System.out.println("Nuevo Nombre Presentacion:>");
            UpdatePresentacion.setPresentacion(nombre = leer.nextLine());
            UpdatePresentacion.setIdPresentacion(id);
            PresentacionJDBC.update(UpdatePresentacion);
        }
        Line();
    }
    
    public static int EvalueData(){
        int enc = 0, id = 0, pos=0;
        //char esc;
        Scanner leer = new Scanner(System.in);
        PresentacionJDBC categoriaJDBC = new PresentacionJDBC();
        
        List<Presentacion> categorias = categoriaJDBC.select();
        do{
            id=0;
            pos=0;
            Line();
            //System.out.println(">>> MODIFICANDO DATOS <<<");
            System.out.println("Ingrese el identificador (id), para salir -> '0':");
            System.out.println(":>");
            id = leer.nextInt();
            if(id == 0){break;}
            System.out.println("\t\t\t\t\tBuscando identificador...\n");
            for(Presentacion categoria:categorias){
                if(id != categoria.getIdPresentacion()){
                    enc  = 0;
                }
                else{
                    enc = 1;
                    break;
                }
                pos++;
            }
            if(id<0){
                System.out.println(">>> Error: No existen identificadores negativos! " + "->" + " ["+ id +"]");
            }
            else if(enc == 0){
                System.out.println("Este identificador [" + id + "] no existe en la base de datos o fue eliminado!");
            }
            else if(enc == 1){
                System.out.println("*** ID = [" + id + "] Encontrado! ***");
                System.out.println("Datos:\n" + categorias.get(pos));
            }
            Line();
        }while(enc != 1 || id == 0);
        return id;
    }
    
    public static void Line(){
        System.out.println("\n------------------------------------------------------------------------------------------------------------");
    }
}
